<view class="box"><view class="top"><view class="top-but"><button class="active" hover-class="button-hover">全部</button><button class="active" a:for="{{options}}" a:for-item="option" a:for-index="__i0__" a:key="id">{{option.name}}</button></view><view class="top-but"><button class="active" a:for="{{items}}" a:for-item="item" a:for-index="__i1__" a:key="id">{{item.name}}</button></view></view><view class="below"><view data-event-opts="{{[['tap',[['goBookDetail',['$0'],[[['books','bookId',item.bookId]]]]]]]}}" class="below-box" onTap="__e" a:for="{{books}}" a:for-item="item" a:for-index="__i2__" a:key="bookId"><view class="below-left"><image style="width:180rpx;height:250rpx;" src="{{item.picUrl}}"></image></view><view class="below-right"><text>{{item.bookName}}</text><text class="text">{{item.desc}}</text><text class="text-l">{{item.author}}</text><text class="text-r">{{item.tag}}</text></view></view></view></view>